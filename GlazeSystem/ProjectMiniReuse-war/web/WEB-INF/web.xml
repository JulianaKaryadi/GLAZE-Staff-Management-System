<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.web.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageShiftServlet</servlet-name>
        <servlet-class>com.web.ManageShiftServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageShiftsServlet</servlet-name>
        <servlet-class>com.web.ManageShiftsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.web.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ManageStaffServlet</servlet-name>
        <servlet-class>com.web.ManageStaffServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ManageStaffServlet</servlet-name>
        <url-pattern>/ManageStaffServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ManageTasksServlet</servlet-name>
        <servlet-class>com.web.ManageTasksServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ManageTasksServlet</servlet-name>
        <url-pattern>/ManageTasksServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ReportServlet</servlet-name>
        <servlet-class>com.web.ReportServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReportServlet</servlet-name>
        <url-pattern>/ReportServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>StaffTaskServlet</servlet-name>
        <servlet-class>com.web.StaffTaskServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StaffTaskServlet</servlet-name>
        <url-pattern>/StaffTaskServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageShiftsServlet</servlet-name>
        <url-pattern>/ManageShiftsServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
